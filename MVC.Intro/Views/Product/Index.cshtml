@using System.Linq
@model IEnumerable<MVC.Intro.Models.Product>
@{
    ViewData["Title"] = "Продукти";
    var hasProducts = Model != null && Model.Any();
}

<section class="page-hero py-4 mb-4">
    <div class="d-flex flex-wrap justify-content-between align-items-center gap-3">
        <div>
            <p class="text-uppercase text-danger fw-semibold small mb-1">Каталог</p>
            <h1 class="h2 fw-bold mb-2">Продукти на „Булс“</h1>
            <p class="text-secondary mb-0">Управлявайте наличностите – добавяйте, преглеждайте и премахвайте продукти.</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-danger btn-lg" asp-controller="Product" asp-action="Create">+ Нов продукт</a>
        </div>
    </div>
</section>

<div class="card shadow-sm">
    <div class="card-body p-0">
        @if (!hasProducts)
        {
            <div class="p-4 text-center text-secondary">
                Няма добавени продукти. Започнете с бутона „Нов продукт“.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Продукт</th>
                            <th scope="col" class="text-end" style="width: 140px;">
                                @Html.DisplayNameFor(m => m.Price)
                            </th>
                            <th class="text-end" style="width: 220px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrWhiteSpace(item.ImagePath))
                                        {
                                            <img src="@item.ImagePath" alt="Product image" class="rounded" style="width: 48px; height: 48px; object-fit: cover;" />
                                        }
                                        <div class="fw-semibold">@Html.DisplayFor(m => item.Name)</div>
                                    </div>
                                </td>
                                <td class="text-end">
                                    @Html.DisplayFor(m => item.Price)
                                </td>
                                <td class="text-end">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a class="btn btn-outline-dark" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Детайли</a>
                                        <a class="btn btn-outline-primary" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id">Редакция</a>
                                        <form asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" method="post" class="d-inline" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете продукта?');">
                                            <button type="submit" class="btn btn-outline-danger">Изтрий</button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>